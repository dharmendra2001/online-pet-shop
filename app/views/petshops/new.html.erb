


<br>
<div class="col-lg-6 mx-lg-auto card shadow mt-5">

  <div class="card-header">
    <h3 class="card-title text-center">Create your Petshop</h3>
    </div>
  <div class="card-body">
    <%=notice%>
<%= form_with method: :post  do |form| %>

  <div class="form-group mb-2">
    <%= form.label :name_of_shop %><br>
    <%= form.text_field :name, placeholder: "Enter your shop name" ,class: "form-control form-control-lg"  %>
  </div>

  <div class="form-group mb-2">
    <%= form.label :address %><br>
     <%= form.email_field :email,  placeholder: "Enter your shop address" ,class: "form-control form-control-lg"%>
  </div>

  <div>
    <%= form.submit "Submit", class: "btn btn-primary btn-lg"  %>
  </div>
  <% end %>
  </div>
</div>



