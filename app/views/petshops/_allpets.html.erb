
<% @pet&.each do |p|%>
  <% if p.status == 0%>
    <%=image_tag p.image, style: "width: 200px; display: block;" if p.image.attached?%>
    Name: <%=link_to p.petname, pet_path(p.id)%><br>
    Pet Type: <%=link_to p.pet_type, pet_path(p.id)%><br>
    <%= link_to "More", pet_path(p.id), class: "btn btn-success"%><hr>
  <%end%>
<%end%>

