<section class="h-100 h-custom" style="background-color: #8FC4B7;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-8 col-xl-6">
        <div class="card rounded-3">
          <div class="card-body p-4 p-md-5">
            <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2 text-center">Add Pet</h3>
            <div class="px-md-2">
              <%= form_with do |form| %>
                <div class="form-group">
                  <%= form.label :petname %>
                  <%= form.text_field :petname, class: 'form-control' , placeholder: "Enter pet name"%>
                </div>

                <div class="form-group">
                  <%= form.label :pet_type %>
                  <%= form.text_field :pet_type, class: 'form-control' , placeholder: "Enter pet type"%>
                </div>

                <div class="form-group">
                  <%= form.label :food %>
                  <%= form.text_field :food, class: 'form-control' , placeholder: "Enter pet food"%>
                </div>
                  <div class="form-group">
                  <%= form.label :weight %>
                  <%= form.text_field :weight, class: 'form-control', placeholder: "Enter pet weight in kg"%>
                </div>
                  <div class="form-group">
                  <%= form.label :height %>
                  <%= form.text_field :height, class: 'form-control', placeholder: "Enter pet height in cm" %>
                </div>
                <div class="form-group">
                  <%= form.label :age %>
                  <%= form.text_field :age, class: 'form-control', placeholder: "Enter pet age in month" %>
                </div>

                <div class="form-group">
                  <%= form.label :description %>
                  <%= form.text_field :description, class: 'form-control' , placeholder: "Enter pet description"%>
                </div>

                <div class="form-group">
                  <%= form.label :precaution %>
                  <%= form.text_field :precaution, class: 'form-control' , placeholder: "Enter pet precautions"%>
                </div>

                <div class="form-group">
                  <%= form.label :price %>
                  <%= form.text_field :price, class: 'form-control', placeholder: "Enter pet price in $"%>
                </div>

                <div class="form-group">
                  <%= form.label :image %>
                  <%= form.file_field :image,accept: 'image/png,image/jpeg', class: 'form-control'%>
                </div>

                <div class="form-group">
                  <%= form.label :medical_certificate %>
                  <%= form.file_field :medical,accept: 'image/png,image/jpeg', class: 'form-control'%>
                </div>

                <div class="form-group">
                  <%= form.submit class: 'form-control btn-success' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>