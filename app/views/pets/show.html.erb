
<div class="bg-info mx-5 px-5 py-5 w-50">  
  <div class="card mb-3" style="max-width: 540px;">
    <div class="row no-gutters">
      
      <%=image_tag @pet.image, style: "width: 400px; height:300px; display: block;"%><br>
      
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Name: <%=link_to @pet.petname%><br></h5>
            <h6>Pet Type: <%=link_to @pet.pet_type%></h6>
            <h6>Price: <%=link_to @pet.price%>$</h6>
            <h6>Food: <%= link_to @pet.food%></h6>
            <h6>Height: <%= link_to @pet.height%></h6>
            <h6>Weight: <%= link_to @pet.weight%></h6>
            <h6>Age: <%= link_to @pet.age%></h6>
            <h6>Description: <%= link_to @pet.description%></h6>
            <h6>Precaution: <%= link_to @pet.precaution%></h6>           
            <h6>Owner: <%= @pet.petshop.user.name%></h6>
          </div>
          <% if current_user&.petshop == @pet.petshop %>       
          <%else%>
            <%= link_to "Buy", payment_path(@pet.id, @pet.price), class: "btn btn-success"%> 
          <%end%>
            <%= link_to "View Medical Certificate", medical_certificate_path(@pet.id), class: "btn btn-danger"%>
        </div><hr>
    </div>
  </div>
</div>