<table class="table table-striped table-hover w-50">
  <thead class="table-dark">
    <tr class="header">
      <th>Name</th>
      <th>Role</th>
      <th>Shop name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |i| %>
      <tr>
        <td><%= i.name%></td>
        <td><%= i.role%></td>
        <td><%= i.petshop&.shopname%></td>
      </tr>
    <%end%>
  </tbody>
</table>