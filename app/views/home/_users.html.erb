<table class="table table-striped table-hover w-100">
  <thead class="table-dark">
    <h2>USERS DETAILS</h2>
    <tr class="header">
      <th><i class="fa-solid fa-users"></i>Name</th>
      <th>Role</th>
      <th><i class="fa-sharp fa-solid fa-shop"></i>Shop name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |i| %>
      <tr>
        <td><%= i.name%></td>
        <td><%= i.role%></td>
        <% if i.petshop&.shopname%>
        <td><%= i.petshop&.shopname%></td>
        <%else%>
        <td><%= "No Shop"%></td>
        <%end%>
      </tr>
    <%end%>
  </tbody>
</table>