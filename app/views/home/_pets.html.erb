
<table class="table table-striped table-hover">
  <thead class="table-dark">
    <h2>PET DETAILS</h2>
    <tr class="header">
      <th>Pet Name</th>
      <th>Price</th>
      <th>Weight</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.petshop&.pets&.each do |i| %>
      <tr>
        <td><%= i.petname%></td>
        <td><%= i.price%>$</td>
        <td><%= i.weight%>kg</td>
        <% if i.status == 0%>
        <td class="text-success"><%= "Available"%></td>
        <%else%>
        <td class="text-danger"><%= "Sold Out"%></td>
        <%end%>
        <td>
          <% if i.status == 0%>
            <%= link_to "Delete",pet_path(i.id), data: {turbo_method: :delete ,turbo_confirm: "are you sure"}, class: "btn btn-danger"%>
          <%else%>
            <%= "Sold Out"%>
          <%end%>
          <%= link_to "Medical", medical_certificate_path(i.id), class: "btn btn-danger"%>
        </td>
      </tr>
    <%end%>
  </tbody>
</table>