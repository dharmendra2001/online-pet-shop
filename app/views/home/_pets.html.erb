
<table class="table table-striped table-hover w-50">
  <thead class="table-dark">
    <h2>Pet Details</h2>
    <tr class="header">
      <th>Pet Name</th>
      <th>Food</th>
      <th>Weight</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    <% current_user.petshop.pets.each do |i| %>
      <tr>
        <td><%= i.petname%></td>
        <td><%= i.food%></td>
        <td><%= i.weight%></td>
        <%if i.image.attached?%>
        <td><%=image_tag i.image, style: "width: 20px; display: block;"%></td>
        <%end%>
      </tr>
    <%end%>
  </tbody>
</table>